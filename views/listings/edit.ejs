<% layout("/layouts/boilerplate") %>



        <div class="row">
            <div class="col-8 offset-2">
                <h4>Create new Listing</h4>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate
                    class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea name="listing[description]" id="" cols="30" rows="5"
                            class="form-control" required> <%= listing.description %></textarea>
                        <div class="invalid-feedback">Please enter a short description!</div>
                    </div>
                    <div class="mb-3">
                        Original Listing Image <br>
                        <img src="<%= listing.image.url %>" alt="Original Listing Image" height="150px" width="240px">
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-lable">Upload New Image</label>
                        <input type="file" name="listing[image]" value="<%= listing.image %>" class="form-control" >
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input type="text" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                            <div class="invalid-feedback">Please enter a valid price!</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Country</label>
                            <input type="text" name="listing[country]" id="" value="<%= listing.country %>"
                                class="form-control" required>
                            <div class="invalid-feedback">Please enter a valid country name!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text" name="listing[location]" id="" value="<%= listing.location %>"
                            class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid Location!</div>
                    </div>


                    <button class="btn btn-dark edit-btn">Edit</button>

            </div>
        </div>

      