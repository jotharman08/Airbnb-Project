<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h4>Create new Listing</h4>

                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listing[title]" class="form-control" placeholder="Add a catcy title"
                            required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea name="listing[description]" id="" cols="30" rows="5" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a short description!</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-lable">Upload Listing Image</label>
                        <input type="file" name="listing[image]" class="form-control" required
                            >
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input type="text" name="listing[price]" class="form-control" placeholder="$1200" required>
                            <div class="invalid-feedback">Please enter a valid price!</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-lable">Country</label>
                            <input type="text" name="listing[country]" id="" class="form-control" placeholder="Canada"
                                required>
                                <div class="invalid-feedback">Please enter a valid Country name</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text" name="listing[location]" id="" class="form-control"
                            placeholder="Nigara Falls, Ontario" required>
                            <div class="invalid-feedback">Please enter a valid Location!</div>
                    </div>


                    <button class="btn btn-dark add-btn">Add</button>

                </form>
            </div>
        </div>
    </body>